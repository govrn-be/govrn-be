---
import Layout from '../layouts/Layout.astro';
import AIChat from '../components/ai/AIChat.astro';
import AIHighlights from '../components/ai/AIHighlights.astro';
import AIFeatures from '../components/ai/AIFeatures.astro';
import AISecurity from '../components/ai/AISecurity.astro';

const features = [
  {
    icon: "üîç",
    title: "Intelligent Search",
    description: "Natural language search across all your board documents with instant, relevant results"
  },
  {
    icon: "üìä",
    title: "Smart Summaries",
    description: "Get concise summaries of lengthy documents and meeting minutes with key points highlighted"
  },
  {
    icon: "üéØ",
    title: "Decision Support",
    description: "AI-powered insights to help inform strategic decision-making based on historical data"
  }
];

const securityFeatures = [
  {
    icon: "üîí",
    title: "Data Privacy",
    description: "Your data stays within your secure environment",
    details: [
      "End-to-end encryption",
      "Private cloud deployment",
      "No data sharing",
      "Access controls"
    ]
  },
  {
    icon: "üìù",
    title: "Audit Trail",
    description: "Complete transparency in AI interactions",
    details: [
      "Source attribution",
      "Usage logging",
      "Query tracking",
      "Response verification"
    ]
  },
  {
    icon: "‚ö°",
    title: "Real-time Processing",
    description: "Instant, secure processing of queries",
    details: [
      "Local processing",
      "No external APIs",
      "Fast response times",
      "Resource optimization"
    ]
  }
];
---

<Layout title="AI Assistant - Govrn Board Management Software" description="Experience the power of AI to unlock insights from your board documents while maintaining complete security and privacy.">
  <main class="pt-24">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-white to-gray-50 py-32 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(57,153,222,0.1),transparent_50%)]"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center max-w-3xl mx-auto">
          <div class="inline-flex items-center rounded-full px-4 py-1 text-sm font-medium bg-primary/10 text-primary mb-8">
            AI-Powered Insights
          </div>
          <h1 class="text-5xl font-extrabold text-gray-900 tracking-tight mb-8">
            Your Intelligent Board
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-600">
              Assistant
            </span>
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            Experience the power of AI to unlock insights from your board documents while maintaining complete security and privacy.
          </p>
        </div>
      </div>
    </section>

    <!-- AI Highlights Section -->
    <AIHighlights />

    <!-- Demo Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">
              Experience AI-Powered Board Intelligence
            </h2>
            <p class="text-xl text-gray-600 leading-relaxed mb-8">
              Ask questions about your board documents and get instant, accurate responses backed by your organization's data.
            </p>
          </div>
          <div class="relative">
            <AIChat />
          </div>
        </div>
      </div>
    </section>

    <!-- Features -->
    <AIFeatures features={features} />

    <!-- Security -->
    <AISecurity features={securityFeatures} />

    <!-- CTA -->
    <section class="bg-gradient-to-br from-primary to-blue-600 py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-8">
          Ready to Experience AI-Powered Board Management?
        </h2>
        <p class="text-xl text-white/90 mb-12 max-w-2xl mx-auto">
          Join leading organizations using Govrn's AI assistant to make better board decisions
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/request-demo"
            class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-primary bg-white hover:bg-gray-50 transition-colors duration-200"
          >
            Request Demo
          </a>
          <a
            href="/contact"
            class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-white border-2 border-white hover:bg-white/10 transition-colors duration-200"
          >
            Contact Sales
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>