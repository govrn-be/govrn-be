---
import Layout from '../../layouts/Layout.astro';
import CTA from '../../components/CTA.astro';

// Import sections
import Hero from '../../components/features/agenda-builder/sections/Hero.astro';
import InteractiveDemo from '../../components/features/agenda-builder/sections/InteractiveDemo.astro';
import AIFeatures from '../../components/features/agenda-builder/sections/AIFeatures.astro';
import TimelineView from '../../components/features/agenda-builder/sections/TimelineView.astro';
import TemplateShowcase from '../../components/features/agenda-builder/sections/TemplateShowcase.astro';

// Import data
import { features, templates, benefits } from '../../data/agenda-builder';
---

<Layout title="AI-Powered Agenda Builder | Govrn">
  <main class="pt-24">
    <!-- Hero Section -->
    <Hero 
      title="Create Perfect Board Agendas in Minutes"
      subtitle="Transform your meeting preparation with AI-powered agenda creation, intelligent time management, and seamless collaboration tools."
    />

    <!-- Interactive Demo Section -->
    <InteractiveDemo />

    <!-- AI Features Section -->
    <AIFeatures features={features} />

    <!-- Timeline View Section -->
    <TimelineView />

    <!-- Template Showcase Section -->
    <TemplateShowcase templates={templates} />

    <!-- CTA Section -->
    <CTA />
  </main>
</Layout>