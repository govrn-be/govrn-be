---
import Layout from '../../layouts/Layout.astro';
import AgendaTemplates from '../../components/features/agenda-builder/templates/AgendaTemplates.astro';
import AgendaPreview from '../../components/features/agenda-builder/preview/AgendaPreview.astro';

const features = [
  {
    title: "Smart Templates",
    description: "Start quickly with pre-built templates for different meeting types",
    icon: "üìã",
    benefits: [
      "Industry-specific templates",
      "Customizable layouts",
      "Time allocation suggestions",
      "Best practice formats"
    ]
  },
  {
    title: "AI-Powered Suggestions",
    description: "Get intelligent recommendations based on your board's history",
    icon: "ü§ñ",
    benefits: [
      "Context-aware items",
      "Smart time allocation",
      "Follow-up tracking",
      "Pattern recognition"
    ]
  },
  {
    title: "Dynamic Organization",
    description: "Easily organize and adjust your agenda items",
    icon: "‚ú®",
    benefits: [
      "Drag-and-drop ordering",
      "Sub-item management",
      "Time reallocation",
      "Document linking"
    ]
  }
];

const workflowSteps = [
  {
    title: "Select Template",
    description: "Choose from pre-built templates or start from scratch",
    icon: "üìù",
    animation: "slide-right"
  },
  {
    title: "Customize Content",
    description: "Add, remove, or modify agenda items with ease",
    icon: "‚úèÔ∏è",
    animation: "slide-right"
  },
  {
    title: "Review Timeline",
    description: "Visualize and adjust time allocations",
    icon: "‚è±Ô∏è",
    animation: "slide-right"
  },
  {
    title: "Share & Collaborate",
    description: "Get feedback and finalize the agenda",
    icon: "ü§ù",
    animation: "slide-right"
  }
];

const items = [
  {
    title: "Financial Review",
    type: "discussion",
    duration: 30,
    description: "Review Q1 financial performance and metrics",
    presenter: "CFO",
    subItems: [
      { title: "Q1 Financials", duration: 15 },
      { title: "Budget Forecast", duration: 15 }
    ],
    documents: [
      { name: "Q1-financials.pdf", type: "pdf" },
      { name: "budget-forecast.xlsx", type: "xlsx" }
    ]
  },
  {
    title: "Strategic Initiatives", 
    type: "decision",
    duration: 30,
    description: "Vote on proposed strategic initiatives for next quarter",
    presenter: "CEO",
    subItems: [
      { title: "Strategic Plan", duration: 15 },
      { title: "Initiative Details", duration: 15 }
    ],
    documents: [
      { name: "strategic-plan.pdf", type: "pdf" },
      { name: "initiative-details.pdf", type: "pdf" }
    ]
  },
];

const timeSlots = [
  { startTime: "09:00", endTime: "09:30", title: "Opening Remarks", type: "discussion", duration: 30 },
  { startTime: "09:30", endTime: "10:00", title: "Financial Review", type: "discussion", duration: 30 },
  { startTime: "10:00", endTime: "10:30", title: "Strategic Initiatives", type: "decision", duration: 30 }
];

const totalDuration = 60;
---

<Layout title="AI-Powered Agenda Builder - Govrn" description="Create comprehensive meeting agendas with AI-powered suggestions, smart templates, and real-time collaboration tools." >
  <main class="pt-16">
    <!-- Hero Section with Enhanced Visual Appeal -->
    <section class="relative min-h-[90vh] flex items-center bg-gradient-to-br from-white to-gray-50 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(57,153,222,0.1),transparent_50%)]"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="flex flex-col lg:flex-row items-center gap-12">
          <div class="flex-1 text-left">
            <div class="inline-flex items-center rounded-full px-4 py-1.5 text-sm font-medium bg-primary/10 text-primary mb-8 hover:bg-primary/15 transition-colors cursor-pointer">
              ‚ú® AI-Powered Agenda Management
            </div>
            
            <h1 class="text-5xl lg:text-6xl font-bold text-gray-900 tracking-tight mb-6 leading-tight">
              <span class="sr-only">AI-Powered Agenda Management ‚Äî </span>
              Build Dynamic Agendas with
              <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-600">
                Intelligent Assistance
              </span>
            </h1>
            <p class="text-xl text-gray-600 leading-relaxed mb-8">
              Create comprehensive meeting agendas with AI-powered suggestions, smart templates, and real-time collaboration tools.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <button class="px-8 py-4 bg-primary text-white rounded-xl font-medium hover:bg-primary/90 transition-colors shadow-lg shadow-primary/20">
                Try Demo
              </button>
              <button class="px-8 py-4 bg-white text-primary border-2 border-primary/20 rounded-xl font-medium hover:bg-gray-50 transition-colors">
                Watch Video
              </button>
            </div>
          </div>
          <div class="flex-1">
            <AgendaPreview items={items} totalDuration={totalDuration} />
          </div>
        </div>
      </div>
    </section>
    <section>
   

    <!-- Features Section with Cards Animation -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <div class="inline-flex items-center rounded-full px-4 py-1.5 text-sm font-medium bg-primary/10 text-primary mb-8 hover:bg-primary/15 transition-colors cursor-pointer">
            Features</div>
          <h2 class="text-4xl font-bold text-gray-900 mt-2 mb-4">
            Intelligent Agenda Building
          </h2>
          <p class="text-xl text-gray-600">
            Powerful features to streamline your meeting preparation
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {features.map(feature => (
            <div class="group bg-white rounded-xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
              <div class="text-4xl mb-6 group-hover:scale-110 transition-transform">{feature.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{feature.title}</h3>
              <p class="text-gray-600 mb-6">{feature.description}</p>
              <ul class="space-y-3">
                {feature.benefits.map(benefit => (
                  <li class="flex items-center text-gray-600 group-hover:text-primary transition-colors">
                    <svg class="h-5 w-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {benefit}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Workflow Steps with Enhanced Visual Flow -->
    <section class="py-24 bg-gray-50 relative overflow-hidden">
      <div class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] opacity-30"></div>
      
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <div class="inline-flex items-center rounded-full px-4 py-1.5 text-sm font-medium bg-primary/10 text-primary mb-8 hover:bg-primary/15 transition-colors cursor-pointer">
            How It Works</div>
          <h2 class="text-4xl font-bold text-gray-900 mt-2 mb-4">
            Simple, Intuitive Workflow
          </h2>
          <p class="text-xl text-gray-600">
            Create perfect agendas in minutes with our streamlined process
          </p>
        </div>

        <div class="relative">
          <div class="absolute top-1/2 left-0 right-0 h-0.5 bg-primary/20 hidden md:block"></div>
          <div class="grid md:grid-cols-4 gap-8">
            {workflowSteps.map((step, index) => (
              <div 
                class="relative bg-white rounded-xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
                style={`animation-delay: ${index * 200}ms`}
              >
                <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 bg-primary/10 text-primary w-8 h-8 rounded-full flex items-center justify-center text-xl font-bold">
                  {index + 1}
                </div>
                <div class="text-4xl mb-6">{step.icon}</div>
                <h3 class="text-xl font-bold text-gray-900 mb-4">{step.title}</h3>
                <p class="text-gray-600">{step.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Enhanced CTA Section -->
    <section class="bg-gradient-to-br from-primary to-blue-600 py-32">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative">
        <h2 class="text-4xl font-bold text-white mb-8">
          Ready to Transform Your Meeting Preparation?
        </h2>
        <p class="text-xl text-white/90 mb-12 max-w-2xl mx-auto">
          Join leading organizations using Govrn's intelligent agenda builder
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/request-demo"
            class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-primary bg-white hover:bg-gray-50 transition-all duration-200 hover:shadow-lg hover:-translate-y-1"
          >
            Request Demo
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a
            href="/contact"
            class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-white border-2 border-white hover:bg-white/10 transition-all duration-200 hover:-translate-y-1"
          >
            Contact Sales
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  @keyframes slideRight {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-slide-right {
    opacity: 0;
    animation: slideRight 0.5s ease-out forwards;
  }
</style>
