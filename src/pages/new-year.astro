---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/new-year/Hero.astro';
import Message from '../components/new-year/Message.astro';
import Retrospective from '../components/new-year/Retrospective.astro';
import WishModal from '../components/new-year/WishModal.astro';
import ContactCTA from '../components/new-year/ContactCTA.astro';
---
<Layout title="Happy New Year 2025 - Govrn">
  <main class="overflow-hidden">
    <Hero />
    <Message />
    <Retrospective />
    <ContactCTA />
    <WishModal />
  </main>
</Layout>

<script>
  const wishButton = document.getElementById('make-wish-btn');
  const modal = document.getElementById('wish-modal');
  
  wishButton?.addEventListener('click', () => {
    modal?.classList.remove('hidden');
  });
</script>