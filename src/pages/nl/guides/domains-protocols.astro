---
import Layout from '../../../layouts/Layout.astro';
import GuideHeader from '../../../components/guides/GuideHeader.astro';
import GuideStep from '../../../components/guides/GuideStep.astro';
import GuideSubSection from '../../../components/guides/GuideSubSection.astro';
import GuideStepList from '../../../components/guides/GuideStepList.astro';
import ProTip from '../../../components/guides/ProTip.astro';

const netwerkVereisten = [
  "HTTPS-verkeer (poort 443) toestaan voor alle domeinen",
  "WSS-verkeer (poort 443) toestaan voor api.govrn.com",
  "Firewallregels configureren voor toegang",
  "DNS-resolutie verzekeren voor alle domeinen",
  "Connectiviteit testen met alle vereiste domeinen"
];

const probleemoplossingsStappen = [
  "Controleer uw internetverbinding",
  "Verifieer firewallinstellingen", 
  "Wis browser cache en cookies",
  "Probeer een andere browser",
  "Neem contact op met IT bij aanhoudende problemen"
];
---

<Layout title="Domeinen en Protocollen Gids - Govrn">
  <main class="pt-24">
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <GuideHeader
        title="Inzicht in Govrn's Domeinen en Protocollen"
        description="Complete handleiding over de domeinen en protocollen die Govrn gebruikt, inclusief netwerkvereisten en probleemoplossingstips."
      />

      <GuideStep
        number={1}
        title="Overzicht Kerndomeinen"
        description="Leer meer over de essenti√´le domeinen die Govrn's functionaliteit mogelijk maken:"
      >
        <div class="space-y-6">
          <div class="bg-white rounded-lg p-6 border border-gray-200">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-primary/10 rounded-lg flex items-center justify-center text-xl">
                üñ•Ô∏è
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">Frontend Domein</h4>
                <p class="text-gray-600 mb-2">app.govrn.com</p>
                <p class="text-sm text-gray-500">Hoofdgebruikersinterface voor toegang tot het Govrn platform</p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg p-6 border border-gray-200">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-primary/10 rounded-lg flex items-center justify-center text-xl">
                üóÑÔ∏è
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">Opslagdomein</h4>
                <p class="text-gray-600 mb-2">stgovrnprodfr001.blob.core.windows.net</p>
                <p class="text-sm text-gray-500">Beveiligde opslag voor statische bestanden en documenten</p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg p-6 border border-gray-200">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-primary/10 rounded-lg flex items-center justify-center text-xl">
                üîó
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">API Domein</h4>
                <p class="text-gray-600 mb-2">prod.api.ongovrn.com</p>
                <p class="text-sm text-gray-500">Backend diensten en gegevensverwerking</p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg p-6 border border-gray-200">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-primary/10 rounded-lg flex items-center justify-center text-xl">
                üîÑ
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">WebSocket Domein</h4>
                <p class="text-gray-600 mb-2">api.govrn.com</p>
                <p class="text-sm text-gray-500">Realtime updates en notificaties</p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg p-6 border border-gray-200">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-primary/10 rounded-lg flex items-center justify-center text-xl">
                üìù
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">Handtekeningdomein</h4>
                <p class="text-gray-600 mb-2">apps.universign.com</p>
                <p class="text-sm text-gray-500">Integratie van elektronische handtekeningen</p>
              </div>
            </div>
          </div>
        </div>

        <ProTip
          tip="Voeg deze domeinen toe aan de allowlist van uw IT-team om ononderbroken toegang tot Govrn te garanderen."
        />
      </GuideStep>

      <GuideStep
        number={2}
        title="Netwerkvereisten"
        description="Zorg ervoor dat uw netwerk correct is geconfigureerd voor het gebruik van Govrn:"
      >
        <div class="mb-8">
          <GuideStepList items={netwerkVereisten} />
        </div>

        <GuideSubSection title="Protocol Details">
          <div class="grid md:grid-cols-2 gap-4">
            <div class="bg-white rounded-lg p-4 border border-gray-200">
              <h4 class="font-semibold text-gray-900 mb-2">HTTPS (Poort 443)</h4>
              <ul class="text-sm text-gray-600 space-y-1">
                <li>‚Ä¢ Beveiligd webverkeer</li>
                <li>‚Ä¢ Versleutelde gegevensoverdracht</li>
                <li>‚Ä¢ Vereist voor alle domeinen</li>
              </ul>
            </div>
            <div class="bg-white rounded-lg p-4 border border-gray-200">
              <h4 class="font-semibold text-gray-900 mb-2">WSS (Poort 443)</h4>
              <ul class="text-sm text-gray-600 space-y-1">
                <li>‚Ä¢ Realtime communicatie</li>
                <li>‚Ä¢ Live updates</li>
                <li>‚Ä¢ Vereist voor api.govrn.com</li>
              </ul>
            </div>
          </div>
        </GuideSubSection>
      </GuideStep>

      <GuideStep
        number={3}
        title="Verbindingsproblemen Oplossen"
        description="Volg deze stappen als u verbindingsproblemen ervaart:"
      >
        <div class="mb-8">
          <GuideStepList items={probleemoplossingsStappen} />
        </div>

        <ProTip
          tip="Gebruik de ontwikkelaarstools van uw browser (F12) om geblokkeerde verzoeken of verbindingsfouten te controleren."
        />

        <GuideSubSection title="Veelvoorkomende Problemen">
          <div class="space-y-4">
            <div class="bg-white rounded-lg p-4 border border-gray-200">
              <h4 class="font-semibold text-gray-900 mb-2">Verbinding Time-out</h4>
              <p class="text-sm text-gray-600">Duidt meestal op een firewall-probleem of netwerkbeperking. Neem contact op met uw IT-team om domeintoegang te verifi√´ren.</p>
            </div>
            <div class="bg-white rounded-lg p-4 border border-gray-200">
              <h4 class="font-semibold text-gray-900 mb-2">WebSocket Fout</h4>
              <p class="text-sm text-gray-600">Controleer of uw netwerk WebSocket-verbindingen toestaat. Sommige bedrijfsnetwerken kunnen deze blokkeren.</p>
            </div>
            <div class="bg-white rounded-lg p-4 border border-gray-200">
              <h4 class="font-semibold text-gray-900 mb-2">SSL-certificaat Fout</h4>
              <p class="text-sm text-gray-600">Controleer of de datum en tijd van uw systeem correct zijn en of uw browser up-to-date is.</p>
            </div>
          </div>
        </GuideSubSection>
      </GuideStep>

      <!-- Snelle Referentie -->
      <div class="mt-16 bg-gradient-to-br from-primary/5 to-blue-500/5 rounded-xl p-8 border border-primary/10">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Snelle Referentie</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <h3 class="font-semibold text-gray-900 mb-2">Vereiste Domeinen</h3>
            <ul class="space-y-2 text-gray-600 text-sm">
              <li>‚Ä¢ app.govrn.com</li>
              <li>‚Ä¢ stgovrnprodfr001.blob.core.windows.net</li>
              <li>‚Ä¢ prod.api.ongovrn.com</li>
              <li>‚Ä¢ api.govrn.com</li>
              <li>‚Ä¢ apps.universign.com</li>
            </ul>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 mb-2">Vereiste Poorten</h3>
            <ul class="space-y-2 text-gray-600 text-sm">
              <li>‚Ä¢ HTTPS: 443 (TCP)</li>
              <li>‚Ä¢ WSS: 443 (TCP)</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Hulp Sectie -->
      <div class="mt-8 bg-white rounded-xl p-8 shadow-sm border border-gray-200">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Hulp Nodig?</h2>
        <p class="text-gray-600 mb-6">
          Heeft u problemen met de verbinding met Govrn? Ons technische supportteam staat voor u klaar.
        </p>
        <div class="flex space-x-4">
          <a
            href="/nl/contact"
            class="inline-flex items-center px-6 py-3 text-base font-medium rounded-lg text-white bg-primary hover:bg-primary/90 transition-colors"
          >
            Contact Support
          </a>
          <a
            href="/nl/guides"
            class="inline-flex items-center px-6 py-3 text-base font-medium rounded-lg text-gray-900 bg-white border border-gray-200 hover:bg-gray-50 transition-colors"
          >
            Bekijk Alle Handleidingen
          </a>
        </div>
      </div>
    </article>
  </main>
</Layout>