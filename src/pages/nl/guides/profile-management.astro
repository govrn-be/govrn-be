---
import Layout from '../../../layouts/Layout.astro';
import GuideHeader from '../../../components/guides/GuideHeader.astro';
import GuideStep from '../../../components/guides/GuideStep.astro';
import GuideSubSection from '../../../components/guides/GuideSubSection.astro';
import GuideStepList from '../../../components/guides/GuideStepList.astro';
import ProTip from '../../../components/guides/ProTip.astro';

const accessProfileSteps = [
  "Klik op je profielfoto/naam in de linkerbenedenhoek",
  "Je profielinformatie wordt weergegeven",
  "Klik op 'Bewerken' om wijzigingen aan te brengen"
];

const updateEmailSteps = [
  "Ga naar Accountinstellingen",
  "Klik op 'Bewerken' naast je e-mailadres",
  "Voer je nieuwe e-mailadres in",
  "Klik op 'Wijzigingen opslaan'",
  "Controleer je nieuwe e-mail voor een verificatielink",
  "Klik op de verificatielink om de wijziging te bevestigen"
];

const updatePhoneSteps = [
  "Navigeer naar Accountinstellingen",
  "Klik op 'Bewerken' naast je telefoonnummer",
  "Voer je nieuwe telefoonnummer in",
  "Klik op 'Verificatiecode verzenden'",
  "Voer de code in die je via SMS hebt ontvangen",
  "Klik op 'Verifiëren' om de wijziging te bevestigen"
];

const changePasswordSteps = [
  "Ga naar Accountinstellingen",
  "Klik op 'Wachtwoord wijzigen'",
  "Voer je huidige wachtwoord in",
  "Voer je nieuwe wachtwoord in",
  "Bevestig je nieuwe wachtwoord",
  "Klik op 'Wachtwoord bijwerken'"
];

const profilePictureSteps = [
  "Ga naar Accountinstellingen",
  "Klik op je profielfoto of het camera-icoon",
  "Kies 'Foto uploaden' of 'Foto maken'",
  "Selecteer een afbeelding van je apparaat",
  "Klik op 'Opslaan' om bij te werken"
];
---

<Layout title="Uw Profiel Beheren - Govrn">
  <main class="pt-24">
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <GuideHeader
        title="Hoe u uw Profielinstellingen Beheert"
        description="Complete handleiding voor het bijwerken van uw persoonlijke gegevens, e-mail, telefoonnummer en beveiligingsinstellingen in Govrn."
      />

      <GuideStep
        number={1}
        title="Toegang tot Uw Profiel"
        description="Volg deze stappen om uw profielinformatie te bekijken en te bewerken:"
      >
        <div class="mb-8">
          <GuideStepList items={accessProfileSteps} />
        </div>

        <ProTip
          tip="Houd uw profielgegevens actueel om belangrijke meldingen en communicatie te ontvangen."
        />

        <GuideSubSection title="Profielinformatievelden">
          <div class="bg-white rounded-lg p-4 border border-gray-200">
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">Basisinformatie</h4>
                <ul class="text-sm text-gray-600 space-y-1">
                  <li>• Volledige Naam</li>
                  <li>• Functietitel</li>
                  <li>• Bedrijf</li>
                  <li>• Tijdzone</li>
                </ul>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">Contactgegevens</h4>
                <ul class="text-sm text-gray-600 space-y-1">
                  <li>• E-mailadres</li>
                  <li>• Telefoonnummer</li>
                  <li>• Taalvoorkeur</li>
                </ul>
              </div>
            </div>
          </div>
        </GuideSubSection>
      </GuideStep>

      <GuideStep
        number={2}
        title="Uw Profielfoto Bijwerken"
        description="Voeg een profielfoto toe of wijzig deze met deze stappen:"
      >
        <div class="mb-8">
          <GuideStepList items={profilePictureSteps} />
        </div>

        <ProTip
          tip="Gebruik een professionele profielfoto zodat andere bestuursleden u gemakkelijk kunnen herkennen."
        />

        <GuideSubSection title="Afbeeldingsvereisten">
          <div class="bg-white rounded-lg p-4 border border-gray-200">
            <ul class="text-sm text-gray-600 space-y-1">
              <li>• Maximale bestandsgrootte: 5MB</li>
              <li>• Ondersteunde formaten: JPG, PNG</li>
              <li>• Aanbevolen grootte: 400x400 pixels</li>
              <li>• Bij voorkeur vierkante verhouding</li>
            </ul>
          </div>
        </GuideSubSection>
      </GuideStep>

      <GuideStep
        number={3}
        title="Uw E-mailadres Wijzigen"
        description="Werk uw e-mailadres veilig bij met deze stappen:"
      >
        <div class="mb-8">
          <GuideStepList items={updateEmailSteps} />
        </div>

        <ProTip
          tip="Zorg ervoor dat u toegang heeft tot uw nieuwe e-mailadres voordat u de wijziging doorvoert."
        />

        <GuideSubSection title="Belangrijke Opmerkingen">
          <div class="bg-white rounded-lg p-4 border border-gray-200 space-y-4">
            <div>
              <h4 class="font-semibold text-gray-900 mb-2">E-mailverificatie</h4>
              <p class="text-sm text-gray-600">Uw nieuwe e-mailadres wordt pas actief na verificatie via de link die naar uw nieuwe adres is verzonden.</p>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 mb-2">Toegang Tijdens Wijziging</h4>
              <p class="text-sm text-gray-600">U kunt nog steeds inloggen met uw oude e-mailadres totdat het nieuwe is geverifieerd.</p>
            </div>
          </div>
        </GuideSubSection>
      </GuideStep>

      <GuideStep
        number={4}
        title="Uw Telefoonnummer Bijwerken"
        description="Wijzig uw telefoonnummer voor 2FA en meldingen:"
      >
        <div class="mb-8">
          <GuideStepList items={updatePhoneSteps} />
        </div>

        <ProTip
          tip="Houd uw telefoonnummer actueel om belangrijke beveiligingscodes en meldingen te ontvangen."
        />

        <GuideSubSection title="Telefoonnummerformaat">
          <div class="bg-white rounded-lg p-4 border border-gray-200">
            <ul class="text-sm text-gray-600 space-y-1">
              <li>• Inclusief landcode (bijv. +31 voor Nederland)</li>
              <li>• Geen spaties of speciale tekens</li>
              <li>• Alleen mobiele nummers (geen vaste lijnen)</li>
            </ul>
          </div>
        </GuideSubSection>
      </GuideStep>

      <GuideStep
        number={5}
        title="Uw Wachtwoord Wijzigen"
        description="Houd uw account veilig door uw wachtwoord regelmatig bij te werken:"
      >
        <div class="mb-8">
          <GuideStepList items={changePasswordSteps} />
        </div>

        <ProTip
          tip="Gebruik een uniek, sterk wachtwoord dat u niet op andere websites gebruikt."
        />

        <GuideSubSection title="Wachtwoordvereisten">
          <div class="bg-white rounded-lg p-4 border border-gray-200">
            <ul class="text-sm text-gray-600 space-y-1">
              <li>• Minimaal 8 tekens</li>
              <li>• Ten minste één hoofdletter</li>
              <li>• Ten minste één cijfer</li>
              <li>• Ten minste één speciaal teken</li>
            </ul>
          </div>
        </GuideSubSection>
      </GuideStep>

      <div class="mt-16 bg-gradient-to-br from-primary/5 to-blue-500/5 rounded-xl p-8 border border-primary/10">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Snelle Referentie</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <h3 class="font-semibold text-gray-900 mb-2">Veelvoorkomende Taken</h3>
            <ul class="space-y-2 text-gray-600">
              <li>• Profiel bijwerken: Accountinstellingen > Bewerken</li>
              <li>• E-mail wijzigen: Accountinstellingen > E-mail > Bewerken</li>
              <li>• Telefoon bijwerken: Accountinstellingen > Telefoon > Bewerken</li>
              <li>• Wachtwoord wijzigen: Accountinstellingen > Beveiliging</li>
            </ul>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 mb-2">Belangrijke Tips</h3>
            <ul class="space-y-2 text-gray-600">
              <li>• Houd contactgegevens actueel</li>
              <li>• Gebruik een professionele foto</li>
              <li>• Activeer alle beveiligingsfuncties</li>
              <li>• Werk wachtwoord regelmatig bij</li>
            </ul>
          </div>
        </div>
      </div>

      <div class="mt-8 bg-white rounded-xl p-8 shadow-sm border border-gray-200">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Hulp Nodig?</h2>
        <p class="text-gray-600 mb-6">
          Heeft u problemen met het bijwerken van uw profiel of heeft u hulp nodig? Ons ondersteuningsteam staat voor u klaar.
        </p>
        <div class="flex space-x-4">
          <a
            href="/nl/contact"
            class="inline-flex items-center px-6 py-3 text-base font-medium rounded-lg text-white bg-primary hover:bg-primary/90 transition-colors"
          >
            Contact Opnemen
          </a>
          <a
            href="/nl/guides"
            class="inline-flex items-center px-6 py-3 text-base font-medium rounded-lg text-gray-900 bg-white border border-gray-200 hover:bg-gray-50 transition-colors"
          >
            Alle Handleidingen Bekijken
          </a>
        </div>
      </div>
    </article>
  </main>
</Layout>