---
import Layout from "../../../layouts/Layout.astro";
import AIChat from "../../../components/ai/AIChat.astro";
import AIHighlights from "../../../components/ai/AIHighlights.astro";
import AIFeatures from "../../../components/ai/AIFeatures.astro";
import AISecurity from "../../../components/ai/AISecurity.astro";

const features = [
  {
    icon: "🔍",
    title: "Intelligente zoekfunctie",
    description:
      "Doorzoek al uw bestuursdocumenten in natuurlijke taal met direct relevante resultaten",
  },
  {
    icon: "📊", 
    title: "Automatische samenvattingen",
    description:
      "Ontvang beknopte overzichten van uw documenten en notulen met uitgelichte kernpunten",
  },
  {
    icon: "🎯",
    title: "Beslissingsondersteuning",
    description:
      "AI-gedreven analyses om uw strategische besluitvorming te versterken op basis van historische gegevens",
  },
];

const featuresTexts = {
  title: "Intelligente functies voor beter bestuur",
  description: "Krachtige AI-mogelijkheden specifiek ontworpen voor bestuursbeheer"
}

const securityFeatures = [
  {
    icon: "🔒",
    title: "Gegevensbescherming",
    description: "Uw data blijft in uw beveiligde omgeving",
