</Layout>

<style>
  @keyframes slideRight {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-slide-right {
    opacity: 0;
    animation: slideRight 0.5s ease-out forwards;
  }
</style>
