---
import Layout from '../layouts/Layout.astro';

const plans = [
  {
    name: "Essentials",
    description: "Perfect for small boards and organizations",
    features: [
      "Unlimited Users",
      "Agenda Builder",
      "Document Management",
      "Board Pack Creation",
      "Document Repository",
      "Private Chat",
      "General Governance",
      "AI Search (Basic)",
      "Document Storage & MFA",
      "IM & Email Support"
    ]
  },
  {
    name: "Professional",
    description: "Ideal for growing organizations",
    features: [
      "Everything in Essentials, plus:",
      "Task Management",
      "Document Annotation",
      "Voting",
      "Summary & Transcript",
      "E-Signature (Documents & Minutes)",
      "Sub-Committee Support",
      "Polling & Document Collaboration",
      "Regional Compliance Tools",
      "AI Search (Cognitive)",
      "Advanced Permissions",
      "Priority Email & Phone Support"
    ],
    popular: true
  },
  {
    name: "Enterprise",
    description: "For large organizations with complex needs",
    features: [
      "Everything in Professional, plus:",
      "Advanced Annotation",
      "Advanced Insights",
      "E-Signature (Advanced)",
      "Advanced Collaboration",
      "Sector-Specific Compliance",
      "AI Assistant & Advanced Analytics",
      "SSO Integration",
      "24/7 Support with Customer Success"
    ]
  }
];

const featureCategories = [
  {
    title: "Meeting Features",
    features: [
      "Agenda Builder",
      "Document Management",
      "Task Management",
      "Board Pack Tools",
      "Voting",
      "AI-Powered Minute Tools"
    ]
  },
  {
    title: "Post-Meeting Tools",
    features: [
      "Document Repository",
      "E-Signature",
      "Sub-Committee Support"
    ]
  },
  {
    title: "Collaboration & Governance",
    features: [
      "Real-time Collaboration",
      "Compliance Tools",
      "AI & Analytics",
      "Security Features"
    ]
  }
];
---

<Layout title="Pricing - Govrn Board Management Software" description="Flexible plans designed to meet your board's unique needs. Contact our team for custom pricing tailored to your requirements." image="/pricing.png">
  <main class="pt-24">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-white to-gray-50 py-32 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(57,153,222,0.1),transparent_50%)]"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-5xl font-extrabold text-gray-900 tracking-tight mb-8">
            Choose the Right Plan for Your
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-600">
              Organization
            </span>
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            Flexible plans designed to meet your board's unique needs. Contact our team for custom pricing tailored to your requirements.
          </p>
        </div>
      </div>
    </section>

    <!-- Rest of the file remains unchanged -->
    <!-- Pricing Cards -->
    <section class="py-20 bg-white relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid gap-8 lg:grid-cols-3 sm:grid-cols-2 grid-cols-1">
          {plans.map(plan => (
            <div class={`relative bg-white rounded-2xl shadow-lg overflow-hidden transform hover:-translate-y-1 transition-all duration-300 ${plan.popular ? 'ring-2 ring-primary' : 'ring-1 ring-gray-200'}`}>
              {plan.popular && (
                <div class="absolute top-0 right-0 bg-primary text-white px-4 py-1 text-sm font-medium rounded-bl-lg">
                  Most Popular
                </div>
              )}
              <div class="p-8">
                <h3 class="text-2xl font-bold text-gray-900">{plan.name}</h3>
                <p class="mt-2 text-gray-500">{plan.description}</p>
                <div class="mt-6">
                  <a
                    href="/request-demo"
                    class={`block w-full text-center px-6 py-4 text-lg font-medium rounded-xl transition-colors duration-200 ${
                      plan.popular
                        ? 'text-white bg-primary hover:bg-primary/90'
                        : 'text-primary bg-white border-2 border-primary/20 hover:bg-primary/5'
                    }`}
                  >
                    Contact Sales
                  </a>
                </div>
                <ul class="mt-8 space-y-4">
                  {plan.features.map(feature => (
                    <li class="flex items-center">
                      <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="ml-3 text-gray-600">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Feature Categories -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900">Everything You Need for Effective Board Management</h2>
          <p class="mt-4 text-xl text-gray-600">Comprehensive features to drive your board's success</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {featureCategories.map(category => (
            <div class="bg-white rounded-xl p-8 shadow-sm">
              <h3 class="text-xl font-bold text-gray-900 mb-6">{category.title}</h3>
              <ul class="space-y-4">
                {category.features.map(feature => (
                  <li class="flex items-center text-gray-600">
                    <svg class="h-5 w-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-20 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900">Frequently Asked Questions</h2>
          <p class="mt-4 text-xl text-gray-600">Find answers to common questions about our pricing and plans</p>
        </div>

        <div class="space-y-8">
          <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900">How do I choose the right plan?</h3>
            <p class="mt-2 text-gray-600">Contact our sales team for a personalized recommendation based on your organization's specific needs and requirements.</p>
          </div>
          <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900">Can I switch plans later?</h3>
            <p class="mt-2 text-gray-600">Yes, you can upgrade or downgrade your plan at any time. Our team will help ensure a smooth transition.</p>
          </div>
          <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900">Is there a free trial?</h3>
            <p class="mt-2 text-gray-600">Yes, we offer a free trial so you can experience Govrn's features before committing. Contact us to get started.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="bg-gradient-to-br from-primary to-blue-600 py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-8">
          Ready to Transform Your Board Management?
        </h2>
        <p class="text-xl text-white/90 mb-12 max-w-2xl mx-auto">
          Join leading organizations that trust Govrn to power their board's success
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/request-demo"
            class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-primary bg-white hover:bg-gray-50 transition-colors duration-200"
          >
            Request Demo
          </a>
          <a
            href="/contact"
            class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-white border-2 border-white hover:bg-white/10 transition-colors duration-200"
          >
            Contact Sales
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>