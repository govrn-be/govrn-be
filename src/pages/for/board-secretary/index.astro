---

<Layout title="Board Secretary Software - Govrn Board Management Platform">
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-white to-gray-50 py-32 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(57,153,222,0.1),transparent_50%)]"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <div>
            <div class="inline-flex items-center rounded-full px-4 py-1 text-sm font-medium bg-primary/10 text-primary mb-8">
              Board Secretary Solutions
            </div>
            <h1 class="text-5xl font-extrabold text-gray-900 tracking-tight mb-8">
              Transform Your Board Administration with
              <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-600">
                Intelligent Tools
              </span>
            </h1>
            <p class="text-xl text-gray-600 leading-relaxed mb-12">
              Streamline your board management responsibilities with AI-powered tools that enhance efficiency, ensure compliance, and simplify complex workflows.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <a
                href="/request-demo"
                class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-white bg-primary hover:bg-primary/90 shadow-lg hover:shadow-xl transition-all duration-300"
              >
                Request Demo
              </a>
              <a
                href="/contact"
                class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-gray-900 bg-white border-2 border-gray-200 hover:border-primary/20 hover:bg-gray-50 transition-colors duration-200"
              >
                Contact Sales
              </a>
            </div>
          </div>
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-tr from-primary/20 to-transparent rounded-3xl transform rotate-3"></div>
            <img
              src="/realestate.jpg"
              alt="Govrn Platform Interface"
              class="relative rounded-2xl shadow-2xl"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Core Responsibilities -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Streamline Your Core Responsibilities
          </h2>
          <p class="text-xl text-gray-600">
            Comprehensive tools to help you excel in your role as Board Secretary
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {responsibilities.map(item => (
            <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
              <div class="text-3xl mb-4">{item.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{item.title}</h3>
              <p class="text-gray-600">{item.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Features -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Purpose-Built Features
          </h2>
          <p class="text-xl text-gray-600">
            Tools designed specifically for board secretaries and administrators
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {features.map(feature => (
            <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
              <div class="text-3xl mb-4">{feature.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{feature.title}</h3>
              <p class="text-gray-600 mb-6">{feature.description}</p>
              <ul class="space-y-3">
                {feature.benefits.map(benefit => (
                  <li class="flex items-center text-gray-600">
                    <svg class="h-5 w-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {benefit}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Workflow Steps -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Streamlined Meeting Workflow
          </h2>
          <p class="text-xl text-gray-600">
            Comprehensive support throughout the entire meeting lifecycle
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {workflowSteps.map(step => (
            <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
              <div class="flex items-center space-x-3 mb-6">
                <div class="text-3xl">{step.icon}</div>
                <h3 class="text-xl font-bold text-gray-900">{step.phase}</h3>
              </div>
              <ul class="space-y-4">
                {step.tasks.map(task => (
                  <li class="flex items-start">
                    <svg class="h-5 w-5 text-primary mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="text-gray-600">{task}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Industry Selection -->
    <section class="relative bg-gradient-to-br from-white to-gray-50 py-32 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(57,153,222,0.1),transparent_50%)]"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Industry-Specific Solutions
          </h2>
          <p class="text-xl text-gray-600">
            Discover additional tools and features tailored to your industry's unique requirements
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {industries.map(industry => (
            <a
              href={`/for/board-secretary/industry/${industry.id}`}
              class="group bg-white rounded-xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
            >
              <div class="text-4xl mb-4 transform group-hover:scale-110 transition-transform duration-300">
                {industry.icon}
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-primary transition-colors">
                {industry.name}
              </h3>
              <p class="text-gray-600 mb-6">{industry.description}</p>
              <ul class="space-y-3 mb-6">
                {industry.features.map(feature => (
                  <li class="flex items-center text-gray-600">
                    <svg class="h-5 w-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
              <div class="inline-flex items-center text-primary group-hover:translate-x-2 transition-transform duration-300">
                View Industry Solutions
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>