      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-5xl font-extrabold text-gray-900 tracking-tight mb-8">
            Building a
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-600">
              Better World
            </span>
            Through Better Governance
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed mb-12">
            We're entering a new era for the boardroom, where artificial intelligence transforms how boards work and make decisions.
          </p>
        </div>
      </div>
    </section>

    <MissionVision />
    <FounderStory />

    <!-- AI Capabilities Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">AI-Powered Innovation</h2>
          <p class="text-xl text-gray-600">
            Artificial Intelligence is transforming how boards work. Discover how Govrn leads this revolution.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {aiCapabilities.map(capability => (
            <ValueCard {...capability} />
          ))}
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Our Values</h2>
          <p class="text-xl text-gray-600">
            The principles that guide everything we do at Govrn
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {values.map(value => (
            <ValueCard {...value} />
          ))}
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Meet Our Team</h2>
          <p class="text-xl text-gray-600">
            The passionate people behind Govrn's innovation
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {teamMembers.map(member => (
            <TeamMember {...member} />
          ))}
        </div>
      </div>
    </section>

    <!-- Offices Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Our Offices</h2>
          <p class="text-xl text-gray-600">
            Where innovation happens
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {offices.map(office => (
            <Office {...office} />
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-gradient-to-br from-primary to-blue-600 py-24">
