    ]
  }
];
---

<Layout title="Real-Time Document Collaboration - Govrn" description="Experience seamless real-time document collaboration with enterprise-grade security. Annotate, comment, and work together effortlessly during board meetings.">
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-white to-gray-50 py-32 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(57,153,222,0.1),transparent_50%)]"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <div class="inline-flex items-center rounded-full px-4 py-1 text-sm font-medium bg-primary/10 text-primary mb-8">
            Real-Time Collaboration
          </div>
          <h1 class="text-5xl font-extrabold text-gray-900 tracking-tight mb-8">
            Transform Your Board
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-600">
              Document Collaboration
            </span>
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            Experience seamless real-time document collaboration with enterprise-grade security. Annotate, comment, and work together effortlessly during board meetings.
          </p>
        </div>

        <DocumentViewer />
      </div>
    </section>

    <CollaborationFeatures features={features} />
    
    <LiveAnnotation />
    
    <SecurityFeatures />
    
    <CollaborationStats />
    
    <CTA />
  </main>
</Layout>