---
import Layout from '../../../layouts/Layout.astro';
import DocumentPreview from '../../../components/features/document-collaboration/DocumentPreview.astro';
import CollaborationFeatures from '../../../components/features/document-collaboration/CollaborationFeatures.astro';
import LiveAnnotation from '../../../components/features/document-collaboration/LiveAnnotation.astro';
import SecurityFeatures from '../../../components/features/document-collaboration/SecurityFeatures.astro';
import CollaborationStats from '../../../components/features/document-collaboration/CollaborationStats.astro';
import DocumentViewer from '../../../components/features/document-collaboration/DocumentViewer.astro';
import CTA from '../../../components/CTA.astro';

const features = [
  {
    title: "Private Annotations",
    description: "Add personal notes and annotations visible only to you for meeting preparation",
    icon: "‚úèÔ∏è",
    benefits: [
      "Private note-taking",
      "Personal highlights and markers",
      "Preparation reminders",
      "Individual annotation history"
    ]
  }, 
  {
    title: "Documents Comments",
    description: "Share comments and discussions with the entire board in real-time",
    icon: "üí¨",
    benefits: [
      "Real-time group discussions",
      "Threaded conversations",
      "Rich text formatting",
      "Comment notifications"
    ]
  },
  {
    title: "Version Control",
    description: "Track all changes with comprehensive version history",
    icon: "üîÑ",
    benefits: [
      "Complete change history",
      "Version comparison",
      "Restore previous versions",
