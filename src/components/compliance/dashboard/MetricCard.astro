
---
interface Props {
  title: string;
  value: string;
  change?: string;
  icon: string;
}

const { title, value, change, icon } = Astro.props;
---

<div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
  <div class="flex items-center justify-between mb-4">
    <span class="text-3xl">{icon}</span>
    {change && (
      <span class="text-sm text-green-600 bg-green-100 px-2 py-1 rounded-full">
        {change}
      </span>
    )}
  </div>
  <h3 class="text-gray-600 text-sm mb-1">{title}</h3>
  <div class="text-3xl font-bold text-gray-900">{value}</div>
</div>
