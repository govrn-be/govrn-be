---
const roles = [
  {
    name: "CEO & Executives",
    icon: "👔",
    description: "Strategic tools for executive leadership",
    href: "/for/ceo"
  },
  {
    name: "Board Members",
    icon: "🎯",
    description: "Comprehensive oversight and decision-making tools",
    href: "/for/board-member"
    
  },
  {
    name: "Board Secretary",
    icon: "📊",
    description: "Streamline board administration and documentation",
    href: "/for/board-secretary"
    
  },
  {
    name: "General Counsel",
    icon: "⚖️",
    description: "Legal and compliance management tools",
    href: "/for/general-counsel"
   
  }
];
---

<div class="grid gap-2">
  {roles.map(role => (
    <div class="group/role">
      <a 
        href={role.href}
        class="flex items-start gap-6 p-6 rounded-xl hover:bg-gray-50 transition-all duration-200 border border-transparent hover:border-gray-100"
      >
        <div class="flex-shrink-0 w-16 h-16 bg-primary/5 rounded-xl flex items-center justify-center text-3xl group-hover/role:scale-110 transition-transform duration-200">
          {role.icon}
        </div>
        <div class="flex-grow">
          <p class="text-lg font-medium text-gray-900 group-hover/role:text-primary transition-colors duration-200">{role.name}</h4>
          <p class="text-base text-gray-600 mt-2">{role.description}</p>
        </div>
      </a>
      
      {/* <!-- Submenu -->
      <div class="pl-24 mt-2 space-y-2 hidden group-hover/role:block">
        {role.subItems?.map(item => (
          <a 
            href={item.href}
            class="block px-4 py-2 text-gray-600 hover:text-primary hover:bg-gray-50 rounded-lg transition-all duration-200"
          >
            {item.name}
          </a>
        ))}
      </div> */}
    </div>
  ))}
</div>