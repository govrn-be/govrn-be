---
import SecurityFeature from './security/SecurityFeature.astro';

const securityFeatures = [
  {
    icon: "🔒",
    title: "Enterprise-Grade Security",
    description: "Bank-grade encryption and security measures to protect your sensitive board data"
  },
  {
    icon: "🔐",
    title: "Two-Factor Authentication",
    description: "Enhanced account security with 2FA support across multiple authentication methods"
  },
  {
    icon: "👥",
    title: "Role-Based Access",
    description: "Granular access controls and comprehensive audit trails for every action"
  }
];
---

<section class="py-20 bg-gray-50 relative overflow-hidden">
  <div class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] opacity-50"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <div class="inline-flex items-center rounded-full px-4 py-1 text-sm font-medium bg-primary/10 text-primary mb-6">
        Enterprise-Grade Security
      </div>
      <h2 class="text-4xl font-bold text-gray-900 mb-6">Your Board's Security is Our Priority</h2>
      <p class="text-xl text-gray-600">
        Industry-leading security measures to protect your sensitive board information
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 mb-12">
      {securityFeatures.map(feature => (
        <SecurityFeature {...feature} />
      ))}
    </div>

    <div class="text-center">
      <a
        href="/security"
        class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-white bg-primary hover:bg-primary/90 shadow-lg hover:shadow-xl transition-all duration-300 group"
      >
        Learn More About Security
        <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </div>
</section>