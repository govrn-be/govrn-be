---
interface Suggestion {
  text: string;
  href: string;
  icon: string;
}

interface Props {
  suggestions: Suggestion[];
}

const { suggestions } = Astro.props;
---

<div class="flex flex-wrap justify-center gap-4">
  {suggestions.map(suggestion => (
    <a
      href={suggestion.href}
      class="inline-flex items-center px-6 py-3 text-base font-medium rounded-xl text-gray-900 bg-white border-2 border-gray-200 hover:border-primary/20 hover:bg-gray-50 transition-colors duration-200"
    >
      <span class="mr-2">{suggestion.icon}</span>
      {suggestion.text}
    </a>
  ))}
</div>