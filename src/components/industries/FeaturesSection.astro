---
interface Props {
  name: string;
  features: Array<{
    icon: string;
    title: string;
    description: string;
    benefits: string[];
  }>;
}

const { name, features } = Astro.props;

// Industry-specific section titles
const sectionTitles = {
  'Financial Services': 'Financial Services Board Features',
  'Healthcare': 'Healthcare Governance Tools',
  'Real Estate': 'Real Estate Portfolio Management Features'
};
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">
        {sectionTitles[name] || 'Industry-Specific Features'}
      </h2>
      <p class="text-xl text-gray-600">
        Purpose-built tools for {name.toLowerCase()} board members.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {features.map(feature => (
        <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
          <div class="text-3xl mb-4">{feature.icon}</div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">{feature.title}</h3>
          <p class="text-gray-600 mb-6">{feature.description}</p>
          <ul class="space-y-3">
            {feature.benefits.map(benefit => (
              <li class="flex items-center text-gray-600">
                <svg class="h-5 w-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                {benefit}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>