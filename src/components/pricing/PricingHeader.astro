---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Simple, Transparent Pricing",
  description = "Choose the plan that best fits your organization's needs. All plans include our core features and world-class support."
} = Astro.props;
---

<div class="text-center max-w-3xl mx-auto mb-16">
  <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl">
    {title}
  </h1>
  <p class="mt-4 text-xl text-gray-600">
    {description}
  </p>
</div>