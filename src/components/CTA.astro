---
interface Props {
  texts?: {
    title: string;
    subtitle: string;
    cta1: string;
    cta2: string;
  };
  links?: {
    cta1: string;
    cta2: string;
  };
}

const {
  texts = {
    title: "Ready to Transform Your Board Management?",
    subtitle: "Join leading organizations that trust Govrn for their board management needs",
    cta1: "Request a Demo",
    cta2: "Contact Sales"
  },
  links = {
    cta1: "/request-demo",
    cta2: "/contact"
  }
} = Astro.props;
---

<section id="cta" class="bg-primary py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
        {texts.title}
      </h2>
      <p class="mt-4 text-xl text-white/90">
        {texts.subtitle}
      </p>
      <div class="mt-8 flex justify-center gap-4">
        <a
          href={links.cta1}
          class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-primary bg-white hover:bg-gray-50"
        >
          {texts.cta1}
        </a>
        <a
          href={links.cta2}
          class="inline-flex items-center px-6 py-3 border border-white text-base font-medium rounded-md text-white hover:bg-white/10"
        >
          {texts.cta2}
        </a>
      </div>
    </div>
  </div>
</section>