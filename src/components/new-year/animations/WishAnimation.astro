<div id="wish-particles" class="absolute inset-0 pointer-events-none hidden">
  <canvas id="wish-canvas" class="w-full h-full"></canvas>
</div>

<script>
  import { tsParticles } from "tsparticles-engine";

  const createWishEffect = async () => {
    const container = document.getElementById("wish-particles");
    container?.classList.remove("hidden");

    await tsParticles.load("wish-canvas", {
      particles: {
        number: {
          value: 100,
          density: {
            enable: true,
            value_area: 800
          }
        },
        color: {
          value: "#ffffff"
        },
        shape: {
          type: "star"
        },
        opacity: {
          value: 1,
          random: true,
          anim: {
            enable: true,
            speed: 1,
            opacity_min: 0,
            sync: false
          }
        },
        size: {
          value: 4,
          random: true
        },
        move: {
          enable: true,
          speed: 6,
          direction: "top",
          random: true,
          straight: false,
          outMode: "out"
        }
      },
      interactivity: {
        detect_on: "canvas",
        events: {
          onhover: {
            enable: true,
            mode: "bubble"
          }
        }
      }
    });

    // Hide effect after animation
    setTimeout(() => {
      container?.classList.add("hidden");
    }, 3000);
  }
  declare global {
    interface Window {
      createWishEffect: () => Promise<void>;
    }
  }
  // Make it available globally
  window.createWishEffect = createWishEffect;
</script>