<div id="particles-js" class="absolute inset-0 bg-gradient-to-br from-gray-900 to-primary/50">
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(57,153,222,0.2),transparent_70%)]"></div>
</div>

<script>
  import { tsParticles } from "tsparticles-engine";
  import { loadFull } from "tsparticles";

  async function initParticles() {
    await loadFull(tsParticles);
    
    await tsParticles.load("particles-js", {
      particles: {
        number: {
          value: 100,
          density: {
            enable: true,
            value_area: 800
          }
        },
        color: {
          value: "#ffffff"
        },
        shape: {
          type: "circle"
        },
        opacity: {
          value: 0.5,
          random: true
        },
        size: {
          value: 3,
          random: true
        },
        move: {
          enable: true,
          speed: 2,
          direction: "none",
          random: true,
          straight: false,
          out_mode: "out",
          bounce: false
        }
      },
      interactivity: {
        detect_on: "canvas",
        events: {
          onhover: {
            enable: true,
            mode: "repulse"
          },
          onclick: {
            enable: true,
            mode: "push"
          },
          resize: true
        }
      },
      retina_detect: true
    });
  }

  document.addEventListener("astro:page-load", initParticles);
  initParticles();
</script>