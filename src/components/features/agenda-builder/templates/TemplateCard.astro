---
interface Props {
  name: string;
  icon: string;
  items: Array<{
    title: string;
    type: string;
    duration: number;
  }>;
}

const { name, icon, items } = Astro.props;
---

<div class="bg-gradient-to-br from-primary/5 to-blue-500/5 rounded-xl p-8 border border-primary/10 hover:shadow-lg transition-all duration-300">
  <div class="flex items-center space-x-4 mb-6">
    <div class="text-3xl transform group-hover:scale-110 transition-transform">{icon}</div>
    <h3 class="text-xl font-bold text-gray-900">{name}</h3>
  </div>
  <div class="space-y-4">
    {items.map(item => (
      <div class="bg-white rounded-lg p-4 flex items-center justify-between hover:bg-gray-50 transition-colors duration-200">
        <div class="flex items-center space-x-3">
          <span class="px-3 py-1 text-sm font-medium rounded-full bg-primary/10 text-primary">
            {item.type}
          </span>
          <span class="text-gray-900">{item.title}</span>
        </div>
        <span class="text-gray-500">{item.duration} min</span>
      </div>
    ))}
  </div>
</div>