---
import TimeSlot from './TimeSlot.astro';
import { type TimeSlot as TimeSlotType } from '../types';

interface Props {
  timeSlots: TimeSlotType[];
}

const { timeSlots } = Astro.props;
---

<div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
  <div class="p-6 border-b border-gray-100 bg-gray-50">
    <h3 class="text-lg font-semibold text-gray-900">Meeting Timeline</h3>
  </div>

  <div class="relative p-6">
    <!-- Timeline Line -->
    <div class="absolute left-[95px] top-8 bottom-8 w-px bg-gray-200"></div>

    <div class="space-y-8">
      {timeSlots.map((slot, index) => (
        <TimeSlot 
          {...slot}
          animationDelay={index * 200}
        />
      ))}
    </div>
  </div>
</div>