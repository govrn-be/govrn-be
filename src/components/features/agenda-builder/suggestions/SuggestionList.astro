---
import SuggestionCard from './SuggestionCard.astro';

interface Props {
  suggestions: Array<{
    title: string;
    type: string;
    confidence: number;
    reason: string;
  }>;
}

const { suggestions } = Astro.props;
---

<div class="space-y-6">
  {suggestions.map((suggestion, index) => (
    <SuggestionCard 
      {...suggestion}
      style={`animation-delay: ${index * 300}ms`}
    />
  ))}
</div>