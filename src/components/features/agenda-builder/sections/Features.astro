---
interface Feature {
  title: string;
  description: string;
  icon: string;
  benefits: string[];
}

interface Props {
  features: Feature[];
}

const { features } = Astro.props;
---

<section class="py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">
        Intelligent Features for Better Meetings
      </h2>
      <p class="text-xl text-gray-600">
        Everything you need to create and manage effective board meeting agendas
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {features.map(feature => (
        <div class="group bg-white rounded-xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300">
          <div class="text-4xl mb-6 group-hover:scale-110 transition-transform">{feature.icon}</div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">{feature.title}</h3>
          <p class="text-gray-600 mb-6">{feature.description}</p>
          <ul class="space-y-3">
            {feature.benefits.map(benefit => (
              <li class="flex items-center text-gray-600">
                <svg class="h-5 w-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                {benefit}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>