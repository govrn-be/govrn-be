---
interface Benefit {
  title: string;
  description: string;
  icon: string;
  stat: string;
  statLabel: string;
}

interface Props {
  benefits: Benefit[];
}

const { benefits } = Astro.props;
---

<section class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">
        Measurable Impact on Your Board's Efficiency
      </h2>
      <p class="text-xl text-gray-600">
        See the difference intelligent agenda management makes
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {benefits.map(benefit => (
        <div class="relative group">
          <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-blue-500/5 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 blur-xl"></div>
          
          <div class="relative bg-white rounded-xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300">
            <div class="text-4xl mb-6 transform group-hover:scale-110 transition-transform duration-300">
              {benefit.icon}
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">{benefit.title}</h3>
            <p class="text-gray-600 mb-6">{benefit.description}</p>
            <div class="flex items-center justify-between">
              <span class="text-3xl font-bold text-primary">{benefit.stat}</span>
              <span class="text-sm text-gray-500">{benefit.statLabel}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>