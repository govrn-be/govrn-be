---
import AgendaBuilder from '../AgendaBuilder.astro';
---

<section class="py-24 bg-white relative overflow-hidden">
  <div class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] opacity-20"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">
        Experience AI-Powered Agenda Building
      </h2>
      <p class="text-xl text-gray-600">
        Try our interactive demo to see how easy it is to create and manage board meeting agendas
      </p>
    </div>

    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
      <AgendaBuilder />
    </div>
  </div>
</section>