---
interface Props {
  text: string;
  className?: string;
}

const { text, className = '' } = Astro.props;
---

<span class={`relative inline-block ${className}`}>
  <span class="bg-yellow-200 animate-highlight-pulse">{text}</span>
</span>

<style>
  @keyframes highlightPulse {
    0%, 100% { background-color: rgba(253, 224, 71, 0.3); }
    50% { background-color: rgba(253, 224, 71, 0.5); }
  }

  .animate-highlight-pulse {
    animation: highlightPulse 2s ease-in-out infinite;
  }
</style>
