---
interface Props {
  title: string;
  date: string;
  content: string;
}

const { title, date, content } = Astro.props;
---

<div class="prose prose-lg max-w-none">
  <h1>{title}</h1>
  <p class="text-gray-500">{date}</p>
  <div set:html={content}></div>
</div>

<style>
  .prose {
    max-width: 65ch;
  }

  .prose mark {
    padding: 0.2em 0;
    border-radius: 0.2em;
  }
</style>
