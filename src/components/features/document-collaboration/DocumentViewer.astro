---
import DocumentToolbar from './toolbar/DocumentToolbar.astro';
import CommentSidebar from './comments/CommentSidebar.astro';
import VersionList from './versioning/VersionList.astro';

interface Props {
  comments?: Array<{
    id: string;
    author: { 
      name: string;
      initials: string;
      color?: string;
    };
    content: string;
    timestamp: string;
    replies?: Array<{
      id: string;
      author: {
        name: string;
        initials: string;
        color?: string;
      };
      content: string;
      timestamp: string;
    }>;
  }>;
  versions?: Array<{
    id: string;
    author: {
      name: string;
      initials: string;
    };
    timestamp: string;
    changes: string[];
  }>;
  tools?: Array<{
    icon: string;
    label: string;
  }>;
  texts?: {
    version: string;
    share: string;
    shareThrough: string;
    shareOptions: string[];
    title: string;
    date: string;
    strategicTitle: string;
    strategicContent: string;
    strategicItems: string[];
    financialTitle: string;
    financialContent: string;
    highlightedText: string;
    comparedText: string;
    comments: {
      title: string;
      filterButton: string;
      addCommentPlaceholder: string;
      submitButton: string;
      userInitials: string;
    };
  };
}

