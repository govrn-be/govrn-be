---
import type { Tool } from '../../../types/document-collaboration';

interface Props {
  tool: Tool;
}

const { tool } = Astro.props;
---

<button
  class="p-2 rounded-lg hover:bg-gray-100 text-gray-600 hover:text-gray-900 transition-colors group relative"
  title={tool.label}
>
  <span class="text-xl">{tool.icon}</span>
  <span class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-2 py-1 text-xs font-medium text-white bg-gray-900 rounded opacity-0 group-hover:opacity-100 transition-opacity">
    {tool.label}
  </span>
</button>
