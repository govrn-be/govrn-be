---
import CursorAnimation from './animations/CursorAnimation.astro';
import HighlightAnimation from './animations/HighlightAnimation.astro';
import AnnotationBubble from './annotations/AnnotationBubble.astro';
import DocumentHeader from './document/DocumentHeader.astro';

const cursors = [
  { initials: 'AB', color: '#3B82F6', delay: 0 },
  { initials: 'MC', color: '#10B981', delay: 2000 }
];

const annotations = [
  {
    author: { initials: 'JD', name: 'John Doe' },
    content: 'Should we add more detail about the Q2 targets?',
    position: 'right',
    className: 'top-1/4'
  },
  {
    author: { initials: 'âœ“', name: 'Verified', color: 'green' },
    content: 'Approved',
    position: 'left',
    className: 'bottom-1/4'
  }
];
---

<div class="relative">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-xl shadow-2xl border border-gray-100 overflow-hidden">
      <DocumentHeader />

      <div class="p-8 relative min-h-[400px]">
        <div class="space-y-4 animate-fade-in">
          <h2 class="text-2xl font-bold text-gray-900">Board Meeting Minutes</h2>
          <p class="text-gray-600">Date: March 15, 2024</p>
          
          <div class="relative">
            <p class="text-gray-600 leading-relaxed">
              The board discussed the company's strategic initiatives for the upcoming quarter...
            </p>
            {annotations.map(annotation => (
              <AnnotationBubble {...annotation} />
            ))}
          </div>

          <p class="text-gray-600 leading-relaxed">
            Financial performance exceeded expectations with a
            <HighlightAnimation text="20% increase in revenue" />
          </p>
        </div>

        {cursors.map(cursor => (
          <CursorAnimation {...cursor} />
        ))}
      </div>
    </div>
  </div>
</div>
