---
import DocumentFlow from '../animations/DocumentFlow.astro';
import TaskTimeline from '../animations/TaskTimeline.astro';
import FeatureHighlight from '../animations/FeatureHighlight.astro';

interface Props {
  texts?: {
    badge: string;
    title: string;
    subtitle: string;
    keyBenefits: string;
  };
  documentFlowProps?: {
    documents: {
      type: string;
      icon: string;
    }[];
    sharingMethods: {
      name: string;
      line: string;
    }[];
    texts: {
      centralIcon: {
        emoji: string;
        title: string;
        subtitle: string;
      }
    }
  };
  outcomes?: {
    title: string;
    description: string;
    component: any;
    stats: {
      value: string;
      label: string;
    }[];
    benefits: string[];
    link?: {
      text: string;
      url: string;
    }
  }[];
}

const {
  texts = {
    badge: "Measurable Results",
    title: "Transform Your Board's Performance",
    subtitle: "See the real impact Govrn brings to your board operations with measurable improvements in efficiency, insight, and governance.",
    keyBenefits: "Key Benefits:"
  },
  documentFlowProps = {
    documents: [
      { type: "Contract", icon: "üìÑ" },
      { type: "Minutes", icon: "üìù" },
      { type: "Report", icon: "üìä" },
      { type: "Agenda", icon: "üìÖ" },
      { type: "Policy", icon: "üìã" }
    ],
    sharingMethods: [
      { name: "Email", line: "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" },
      { name: "Mobile", line: "M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" },
      { name: "Desktop", line: "M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" },
      { name: "Team", line: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" }
    ],
    texts: {
      centralIcon: {
        emoji: "üîí",
        title: "Secure",
        subtitle: "Storage"
      }
    }
  },
  outcomes = [
    {
      title: "Centralized Information Hub",
      description: "One secure platform for all your board documents, accessible anywhere, anytime - regardless of your team's digital comfort level.",
      component: DocumentFlow,
      componentProps: documentFlowProps,
      stats: [
        { value: "100%", label: "Digital Accessibility" },
        { value: "24/7", label: "Secure Access" }
      ],
      benefits: [
        "Single source of truth for all documents",
        "Intelligent document categorization", 
        "Version control & audit trail",
        "Flexible access permissions"
      ]
    },
    {
      title: "Data-Driven Decisions",
      description: "Transform board documents into actionable insights with AI-powered analysis, helping you make informed strategic decisions faster.",
      component: TaskTimeline,
      componentProps: documentFlowProps,
      stats: [
        { value: "45%", label: "Better Decision Making" },
        { value: "24/7", label: "AI-Powered Insights" }
      ],
      benefits: [
        "Predictive analytics",
        "Strategic recommendations",
        "Market intelligence", 
        "Performance tracking"
      ],
      link: {
        text: "Learn More About Our AI Assistant",
        url: "/features/ai-assistant"
      }
    },
    {
      title: "Effortless Compliance",
      description: "Maintain perfect compliance with automated tracking, e-signatures, and role-based governance tools that save time and reduce risk.",
      component: FeatureHighlight,
      componentProps: documentFlowProps,
      
      stats: [
        { value: "100%", label: "Compliance Coverage" },
        { value: "40%", label: "Time Saved on Admin" }
      ],
      benefits: [
        "Automated compliance checks",
        "Digital signing workflow",
        "Role-based permissions",
        "Audit trail tracking"
      ]
    }
  ]
} = Astro.props; 
---

<section class="py-24 bg-gradient-to-br from-gray-50 to-white relative overflow-hidden">
  <div class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] opacity-20"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div class="text-center max-w-3xl mx-auto mb-20">
      <div class="inline-flex items-center rounded-full px-6 py-2 text-sm font-medium bg-primary/10 text-primary mb-6">
        {texts.badge}
      </div>
      <h2 class="text-4xl font-bold text-gray-900 mb-6">{texts.title}</h2>
      <p class="text-xl text-gray-600">
        {texts.subtitle}
      </p>
    </div>

    <div class="space-y-32">
      {outcomes.map((outcome, index) => (
        <div class={`grid lg:grid-cols-2 gap-16 items-center ${index % 2 === 1 ? 'lg:grid-flow-dense' : ''}`}>
          <div class={index % 2 === 1 ? 'lg:col-start-2' : ''}>
            <h3 class="text-3xl font-bold text-gray-900 mb-6">{outcome.title}</h3>
            <p class="text-xl text-gray-600 mb-8 leading-relaxed">{outcome.description}</p>
            
            <div class="grid grid-cols-2 gap-8 mb-8">
              {outcome.stats.map(stat => (
                <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
                  <div class="text-3xl font-bold text-primary mb-2">{stat.value}</div>
                  <div class="text-gray-600">{stat.label}</div>
                </div>
              ))}
            </div>

            <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-100">
              <h4 class="font-semibold text-gray-900 mb-4">{texts.keyBenefits}</h4>
              <ul class="grid grid-cols-2 gap-4">
                {outcome.benefits.map(benefit => (
                  <li class="flex items-center">
                    <svg class="h-5 w-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="text-gray-600">{benefit}</span>
                  </li>
                ))}
              </ul>
            </div>

            {outcome.link && (
              <div class="mt-8">
                <a
                  href={outcome.link.url}
                  class="inline-flex items-center px-6 py-3 text-base font-medium rounded-lg text-white bg-primary hover:bg-primary/90 shadow-lg hover:shadow-xl transition-all duration-300 group"
                >
                  {outcome.link.text}
                  <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                </a>
              </div>
            )}
          </div>

          <div class={index % 2 === 1 ? 'lg:col-start-1' : ''}>
            <div class="relative group">
              <!-- Background gradients -->
              <div class="absolute inset-0 bg-gradient-to-br from-gray-100 to-white rounded-2xl"></div>
              <div class="absolute inset-0 bg-gradient-to-r from-primary to-blue-600 opacity-10 group-hover:opacity-20 transition-opacity duration-300 rounded-2xl"></div>
              
              <!-- Animation container -->
              <div class="relative rounded-2xl p-8 backdrop-blur-sm h-[400px]">
                <outcome.component {...outcome.componentProps} />
              </div>
              <div class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] opacity-30"></div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>