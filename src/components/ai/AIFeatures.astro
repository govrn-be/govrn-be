---
interface Props {
  features: Array<{
    icon: string;
    title: string;
    description: string;
  }>;
}

const { features } = Astro.props;
---

<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">
        Intelligent Features for Smarter Governance
      </h2>
      <p class="text-xl text-gray-600">
        Powerful AI capabilities designed specifically for board management
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {features.map(feature => (
        <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300">
          <div class="text-4xl mb-6">{feature.icon}</div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">{feature.title}</h3>
          <p class="text-gray-600">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>