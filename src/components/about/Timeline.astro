---
const milestones = [
  {
    year: "2020",
    title: "The Beginning",
    description: "Govrn was founded with a vision to revolutionize board management"
  },
  {
    year: "2021",
    title: "First Major Release",
    description: "Launched our core platform with essential board management features"
  },
  {
    year: "2022",
    title: "AI Integration",
    description: "Introduced AI-powered features for enhanced decision support"
  },
  {
    year: "2023",
    title: "European Expansion",
    description: "Opened our Brussels office and expanded across Europe"
  }
];
---

<section class="py-20 bg-gray-50 relative overflow-hidden">
  <div class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] opacity-50"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Our Journey</h2>
      <p class="text-xl text-gray-600">
        Key milestones in our mission to transform board management
      </p>
    </div>

    <div class="relative">
      <!-- Timeline Line -->
      <div class="hidden lg:block absolute left-1/2 transform -translate-x-1/2 h-full w-1 bg-gradient-to-b from-primary/20 via-primary to-primary/20"></div>

      <div class="space-y-24">
        {milestones.map((milestone, index) => (
          <div class={`relative ${index % 2 === 0 ? 'lg:flex-row-reverse' : ''} lg:flex lg:items-center`}>
            <!-- Timeline Dot -->
            <div class="hidden lg:flex absolute left-1/2 transform -translate-x-1/2 w-12 h-12 rounded-full bg-gradient-to-r from-primary to-blue-600 text-white items-center justify-center shadow-lg z-10">
              {milestone.year}
            </div>

            <!-- Content -->
            <div class="lg:w-1/2 lg:px-16">
              <div class={`bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 border border-gray-100 relative ${index % 2 === 0 ? 'lg:ml-auto' : ''}`}>
                <h3 class="text-xl font-bold text-gray-900 mb-2">{milestone.title}</h3>
                <p class="text-gray-600">{milestone.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>