---
interface Props {
  number: number;
  title: string;
  description: string;
}

const { number, title, description } = Astro.props;
---

<div class="mb-12">
  <div class="flex items-center space-x-4 mb-6">
    <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center text-primary font-bold text-xl">
      {number}
    </div>
    <h2 class="text-2xl font-bold text-gray-900">{title}</h2>
  </div>
  <p class="text-lg text-gray-600 leading-relaxed mb-8">{description}</p>
  <slot />
</div>