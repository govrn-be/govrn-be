---
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<div class={`prose prose-lg max-w-none ${className}`}>
  <slot />
</div>

<style is:global>
  .prose {
    --tw-prose-body: #4b5563;
    --tw-prose-headings: #111827;
    --tw-prose-links: #3999de;
    --tw-prose-bold: #111827;
    --tw-prose-counters: #6b7280;
    --tw-prose-bullets: #6b7280;
    --tw-prose-hr: #e5e7eb;
    --tw-prose-quotes: #111827;
    --tw-prose-quote-borders: #3999de;
    --tw-prose-captions: #6b7280;
    --tw-prose-code: #111827;
    --tw-prose-pre-code: #e5e7eb;
    --tw-prose-pre-bg: #1f2937;
    --tw-prose-th-borders: #d1d5db;
    --tw-prose-td-borders: #e5e7eb;
    
    max-width: auto;
    color: var(--tw-prose-body);
    line-height: 1.75;
  }

  .prose :where(h1, h2, h3, h4, h5, h6):not(:where([class~="not-prose"] *)) {
    color: var(--tw-prose-headings);
    font-weight: 700;
    margin-top: 1em;
    margin-bottom: 0em;
    line-height: 1.3;
  }

  .prose :where(h1):not(:where([class~="not-prose"] *)) {
    font-size: 2.25em;
    margin-top: 0;
  }

  .prose :where(h2):not(:where([class~="not-prose"] *)) {
    font-size: 1.875em;
  }

  .prose :where(h3):not(:where([class~="not-prose"] *)) {
    font-size: 1.5em;
  }

  .prose :where(p, ul, ol):not(:where([class~="not-prose"] *)) {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
  }

  .prose :where(img):not(:where([class~="not-prose"] *)) {
    margin-top: 2em;
    margin-bottom: 2em;
    border-radius: 0.75rem;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  }

  .prose :where(blockquote):not(:where([class~="not-prose"] *)) {
    font-style: italic;
    font-size: 1.25rem;
    border-left-width: 0.25rem;
    border-left-color: var(--tw-prose-quote-borders);
    margin: 2em 0;
    padding: 0.75em;
    background-color: #f8fafc;
    border-radius: 0.5rem;
    quotes: "\201C""\201D""\2018""\2019";
  }

  .prose :where(code):not(:where([class~="not-prose"] *)) {
    color: var(--tw-prose-code);
    font-weight: 600;
    font-size: 0.875em;
    background-color: #f1f5f9;
    padding: 0.25em 0.5em;
    border-radius: 0.375rem;
  }

  .prose :where(a):not(:where([class~="not-prose"] *)) {
    color: var(--tw-prose-links);
    text-decoration: none;
    font-weight: 500;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s;
  }

  .prose :where(a):not(:where([class~="not-prose"] *)):hover {
    border-bottom-color: currentColor;
  }

  .prose :where(ul > li):not(:where([class~="not-prose"] *)) {
    list-style-type: disc;
    margin: 0em 3em;

  }

  .prose :where(ol > li):not(:where([class~="not-prose"] *)) {
    list-style-type: decimal;
    margin: 0em 3em;

  }

  .prose :where(ol > li):not(:where([class~="not-prose"] *))::marker {
    color: var(--tw-prose-counters);
    font-weight: 500;
  }

  .prose :where(hr):not(:where([class~="not-prose"] *)) {
    border: none;
    border-top: 1px solid var(--tw-prose-hr);
    margin: 3em 0;
  }

  .prose :where(table):not(:where([class~="not-prose"] *)) {
    width: 100%;
    border-collapse: collapse;
    border-spacing: 0;
    margin: 2em 0;
  }

  .prose :where(thead th):not(:where([class~="not-prose"] *)) {
    background-color: #f8fafc;
    font-weight: 600;
    text-align: left;
    padding: 0.75em 1em;
    border-bottom: 2px solid var(--tw-prose-th-borders);
  }

  .prose :where(tbody td):not(:where([class~="not-prose"] *)) {
    padding: 0.75em 1em;
    border-bottom: 1px solid var(--tw-prose-td-borders);
  }
</style>